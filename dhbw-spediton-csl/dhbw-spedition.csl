    <!-- Define Author List Macro -->
    <macro name="author-list">
        <names variable="author">
            <name delimiter=", " delimiter-precedes-last="always" initialize-with=". " name-as-sort-order="all" sort-separator=" "/>
            <label form="short" plural="contextual" text="et al."/>
        </names>
    </macro>

    <!-- Define Citation Format -->
    <citation>
        <layout delimiter=" ">
            <text variable="prefix" prefix=" "/>
            <group delimiter=", ">
                <text macro="author-list"/>
            </group>
            <group delimiter=" ">
                <text variable="issued"/>
                <choose>
                    <if type="webpage">
                        <text variable="accessed" prefix=", Accessed "/>
                    </if>
                    <else-if type="hearing">
                        <group delimiter=" ">
                            <text value="ExpertengesprÃ¤ch"/>
                            <text variable="author" prefix=" "/>
                            <text variable="position" prefix=" "/>
                            <text variable="company" prefix=" "/>
                            <text variable="location" prefix=" "/>
                            <text variable="issued" prefix=" "/>
                        </group>
                    </else-if>
                    <else>
                        <text variable="page" prefix=", S. "/>
                    </else>
                </choose>
            </group>
            <text term="period"/>
        </layout>
    </citation>

    <!-- Bibliography Format -->
    <bibliography>
        <sort>
            <key variable="author"/>
        </sort>
        <layout>
            <choose>
                <if type="book">
                    <text macro="monograph"/>
                </if>
                <else-if type="chapter">
                    <text macro="contribution"/>
                </else-if>
                <else-if type="article">
                    <text macro="essay"/>
                </else-if>
                <else-if type="thesis">
                    <text macro="dissertation"/>
                </else-if>
                <else-if type="webpage">
                    <text macro="website"/>
                </else-if>
                <else-if type="hearing">
                    <text macro="hearing"/>
                </else-if>
            </choose>
            <text term="ending"/>
        </layout>
    </bibliography>

    <!-- Define Monograph Macro -->
    <macro name="monograph">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="issued" prefix=" (" suffix="): "/>
            <text variable="title"/>
            <text macro="edition"/>
            <text macro="editor"/>
            <text variable="publisher-place"/>
            <text variable="publisher"/>
        </group>
    </macro>

    <!-- Define Edition Macro -->
    <macro name="edition">
        <choose>
            <if variable="edition">
                <text variable="edition" prefix=", "/>
            </if>
        </choose>
    </macro>

    <!-- Define Contribution Macro -->
    <macro name="contribution">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="issued" prefix=" (" suffix="): "/>
            <text variable="title"/>
            <text term="in" text=", in: "/>
            <text macro="editor"/>
            <text variable="container-title"/>
            <text variable="publisher-place"/>
            <text variable="publisher"/>
            <text variable="page" prefix=", S. "/>
        </group>
    </macro>

    <!-- Define Essay Macro -->
    <macro name="essay">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="issued" prefix=" (" suffix="): "/>
            <text variable="title"/>
            <text term="in" text=", in: "/>
            <text variable="container-title"/>
            <text variable="volume" prefix=" (" suffix=")"/>
            <text variable="page" prefix=", S. "/>
        </group>
    </macro>

    <!-- Define Dissertation Macro -->
    <macro name="dissertation">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="issued" prefix=" (" suffix="): "/>
            <text variable="title"/>
            <text term="in" text=", "/>
            <text term="dissertation"/>
            <text variable="publisher-place"/>
        </group>
    </macro>

    <!-- Define Website Macro -->
    <macro name="website">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="issued" prefix=" (" suffix="): "/>
            <text variable="title"/>
            <text prefix=", URL: "/>
            <text variable="URL"/>
            <text prefix=", Accessed "/>
            <text variable="accessed"/>
        </group>
    </macro>

    <!-- Define Hearing Macro -->
    <macro name="hearing">
        <group delimiter=" ">
            <text macro="author-list"/>
            <text variable="position" prefix=", "/>
            <text variable="company" prefix=", "/>
            <text variable="location" prefix=", "/>
            <text variable="issued" prefix=", "/>
        </group>
    </macro>
</style>
